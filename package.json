  "keywords": [
    "vue",
    "vue3",
    "modal",
    "composable",
    "global-modal"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "dependencies": {
    "@vueuse/core": "^12.0.0",
    "@vueuse/integrations": "^12.0.0",
    "focus-trap": "^7.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sungchul09/use-modal-vue"
  }
